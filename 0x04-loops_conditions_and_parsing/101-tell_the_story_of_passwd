#!/usr/bin/env bash
# Purpose: Displays a story with information from each line of /etc/passwd.

input="/etc/passwd"
while IFS=: read -r username password userid groupname homedir shell
do
    echo "The user $username is part of the $groupname gang, lives in $homedir, and rides $shell. $userid's place is protected by the passcode $password. More info about the user here: $homedir"
done < "$input"
